<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FriendForPet" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/mBottomSheetDialogTheme</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.FriendForPet.ImageViewDetails" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">60dp</item>
        <item name="cornerSizeBottomRight">60dp</item>
    </style>
    <style name="Theme.FriendForPet.BottomSheet.Photo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="MainItem.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_gravity">center</item>
        <item name="cardBackgroundColor">@android:color/holo_red_dark</item>
        <item name="elevation">6dp</item>
        <item name="cardCornerRadius">30dp</item>

    </style>


    <style name="DetailItem.NameText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">20</item>
    </style>


    <style name="DetailItem.TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="DetailItem.DescText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="DetailItem.AboutText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.FriendForPet.PetsList.FAB" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" >
        <item name="android:textColor">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Theme.FriendForPet.PetsList.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:backgroundTint">@color/toolbar_color</item>
    </style>


    <style name="Theme.FriendForPet.Welcome" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/Theme.FriendForPet.Welcome.HintText</item>
        <item name="endIconDrawable">@drawable/ic_round_location_on_24</item>
        <item name="helperTextEnabled">true</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="cornerSize">16dp</item>
        <item name="errorTextAppearance">@style/Theme.FriendForPet.Welcome.ErrorText</item>


        <item name="boxStrokeColor">@color/colorAccent</item> <!-- ЦВЕТ ОКРУЖАЮЩЕЙ ЛИНИИ -->
        <item name="hintTextColor">@color/filled_boxs_head_text</item>  <!-- Цвет текста в верху-->
        <item name="android:textColorHint">@color/color_text</item> <!-- Цвет текста снизу-->
    </style>
    <style name="Theme.FriendForPet.Welcome.HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/filled_boxs_stroke_focusable</item>
        <item name="android:fontStyle" tools:targetApi="o">@font/rubik</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.FriendForPet.Welcome.ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:fontStyle" tools:targetApi="o">@font/rubik</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/mBottomSheetStyle</item>
    </style>

    <style name="mBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>